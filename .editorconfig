# editorconfig顶级配置文件,停止向上寻找配置文件
root = true
# 匹配文件
[*.{js,jsx,ts,tsx,vue, less}]
# 缩进样式
indent_style = space
# 缩进大小
indent_size = 2
# 换行符类型 = lf
end_of_line = lf
# 字符集=utf-8
charset = utf-8
# 删除行尾空格
trim_trailing_whitespace = true
# 插入最后一行
insert_final_newline = true

[*.md]
# 删除行尾空格 = 否
trim_trailing_whitespace = false

[package.json]
# 缩进样式=空格
indent_style = space
# 缩进大小=2
indent_size = 2
